<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <!--<cn.jzvd.JZVideoPlayerStandard-->
            <!--android:id="@+id/videoplayer"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"/>-->
        <ImageView
            android:id="@+id/videoplayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="村民作业肉过金佛爱飞机"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:src="@drawable/jz_click_play_selector"
            />

        <!--视频标题-->
        <TextView
            android:id="@+id/tv_videoduration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_play"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:text="01:13"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f9f6f6">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="干货空间"
            android:textColor="#8a8a8a"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_publicTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="时间:2017-10-30"
            android:textSize="12sp"/>
    </RelativeLayout>
</LinearLayout>
